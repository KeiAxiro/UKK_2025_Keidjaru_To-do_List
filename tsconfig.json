{
  "compilerOptions": {
    "module": "Node16", // Gunakan Node16 Modules
    "moduleResolution": "Node16", // Resolusi modul sesuai Node.js v16+
    "target": "ES2020", // Target JavaScript modern
    "rootDir": "./src", // Direktori utama
    "outDir": "./dist", // Direktori hasil kompilasi
    "strict": true, // Aktifkan strict mode
    "esModuleInterop": true, // Mempermudah impor modul CommonJS
    "allowSyntheticDefaultImports": true, // Mendukung import default untuk CommonJS
    "noImplicitReturns": false,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUnusedLocals": false,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
