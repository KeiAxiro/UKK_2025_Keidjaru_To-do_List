{
  "builds": [
    {
      "src": "src/bin/server.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "tsc && cp -r src/public dist/public && cp -r src/views dist/views && node dist/bin/server.js"
      }
    },
    {
      "src": "src/public/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/views/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dist/bin/app.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/dist/public/$1"
    },
    {
      "src": "/views/(.*)",
      "dest": "/dist/views/$1"
    }
  ]
}
