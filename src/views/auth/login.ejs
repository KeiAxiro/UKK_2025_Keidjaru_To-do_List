<div id="auth-container" class="">
  <div id="login-container">
    <h5>
      <a class="secondary-text" href="/"
        ><span class="primary-text bold">Quick</span>List</a
      >
    </h5>
    <article id="login-form" class="large-padding">
      <h6>Login</h6>
      <!-- <form action="/api/auth/login" method="post"> -->
      <form class="needs-validation">
        <div class="field label border">
          <input name="userNameEmail" type="text" autofocus required />
          <label class="grey-text">Username or Email</label>
          <span class="helper login grey-text"
            >KeiAxiro or KeiAxiro_23@gmail.com</span
          >
        </div>
        <div class="field label border">
          <input name="userPassword" type="password" required />
          <label class="grey-text">Password</label>
          <span class="helper login"
            ><a class="link" href="">Forgot Password?</a></span
          >
        </div>
        <div class="tiny-padding middle-align" style="height: 10vh">
          <label class="checkbox">
            <input type="checkbox" name="remember" />
            <span>Remember Me</span>
          </label>
          <button
            hx-post="/api/auth/login"
            hx-swap="innerHTML"
            hx-target="#root"
            hx-indicator="#indicator-bar"
            type="submit"
            class="small-round large large-text absolute right"
          >
            Login
          </button>
        </div>
      </form>
      <div id="footer-auth" class="middle-align center-align large-text">
        Do not have an account?
        <a
          hx-get="/api/components/register"
          hx-target="#res"
          hx-trigger="click"
          class="link tiny-padding"
          >Create one</a
        >
      </div>
    </article>
  </div>
  <div
    x-data="{regSnackbar:true}"
    class="snackbar"
    style="cursor: default"
    x-bind:class="regSnackbar ? 'active' : ''"
    @click.away="regSnackbar = false"
  >
    <div class="max">
      Click
      <a
        hx-get="/api/components/register"
        hx-target="#res"
        hx-trigger="click"
        class="inverse-link"
        >Register</a
      >
      or Click
      <a
        class="inverse-link"
        hx-get="/api/components/register"
        hx-target="#res"
        hx-trigger="click"
        >Create One</a
      >
      Button to Register
    </div>
    <a
      class="inverse-link"
      hx-get="/api/components/register"
      hx-target="#res"
      hx-trigger="click"
      >Register</a
    >
  </div>
</div>
<script>
  localStorage.removeItem("isMenuOpen");
</script>
