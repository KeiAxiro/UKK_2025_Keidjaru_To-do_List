<% if (snackbar) { %>

<div
  x-data="{ snackbarShow: <%= snackbar.active %> }"
  x-init="setTimeout(() => snackbarShow = false, 2600)"
  @click="snackbarShow = false"

  class="snackbar top <%= snackbar.type %>"
  x-bind:class="snackbarShow ? 'active' : ''"
>
  <%= snackbar.message %>
</div>

<% } %>
